{
  "name": "aurora-frontend",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "electron:dev": "concurrently \"next dev -p 3000\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:start": "next build && cross-env ELECTRON_RUN_NEXT=1 electron .",
    "electron:pack": "next build && electron-builder --mac"
  },
  "dependencies": {
    "next": "14.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "framer-motion": "^11.2.10",
    "recharts": "^2.12.7",
    "zustand": "^4.5.2",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "tailwindcss": "^3.4.4",
    "postcss": "^8.4.38",
    "autoprefixer": "^10.4.19",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.aurora.simulation",
    "productName": "AURORA",
    "asar": false,
    "directories": { "output": "dist" },
    "files": [".next/**", "node_modules/**", "package.json", "next.config.js", "public/**", "electron/**", "src/**"],
    "mac": { "category": "public.app-category.developer-tools", "target": ["dmg", "zip"] }
  }
}
